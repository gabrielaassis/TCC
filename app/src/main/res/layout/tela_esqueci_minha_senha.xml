<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Aplicativo.TelaEsqueciMinhaSenha">


    <TextView
        android:id="@+id/txtRecuperarSenhaTela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Recuperar Senha"
        android:textAlignment="gravity"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txtDigiteEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="Digite o e-mail para receber as instruções de recuperação de senha"
        android:textAlignment="gravity"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/editEmailRecuperarSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/txtDigiteEmail"
        android:ems="@android:integer/config_longAnimTime"
        android:hint="E-mail"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/btnEnviarEmailRecSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editEmailRecuperarSenha"
        android:gravity="center"
        android:text="Enviar"
        android:textAlignment="gravity" />


</android.widget.RelativeLayout>