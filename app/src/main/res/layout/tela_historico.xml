<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Aplicativo.TelaHistorico">


    <ProgressBar
        android:id="@+id/BolinhaLoad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtDerrotas"
        android:layout_alignParentStart="true"
        android:layout_marginStart="170dp"
        android:layout_marginTop="-90dp"
        android:indeterminate="true" />


    <TextView
        android:id="@+id/txtHistorico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Histórico"
        android:textAlignment="gravity"
        android:textColor="#000"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/txtVitorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtHistorico"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="190dp"
        android:text="Vitórias: x"
        android:textColor="#00F"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/txtEmpates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtVitorias"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="247dp"
        android:text="Empates: x"
        android:textColor="#008000"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/txtDerrotas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtEmpates"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="291dp"
        android:text="Derrotas: x"
        android:textColor="#f00"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/txtNomeTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp"
        android:text="Team X"
        android:textColor="#3e0004"
        android:textSize="30dp" />


</android.widget.RelativeLayout>